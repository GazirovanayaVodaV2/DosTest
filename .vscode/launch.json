{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "gdb",
            "request": "attach",
            "name": "DOS debug target",
            "executable": "${command:cmake.getLaunchTargetPath}.exe",
            "target": "localhost:5123",
            "remote": true,
            "cwd": "${workspaceRoot}",
            "gdbpath": "${userHome}/.dos/gdb/gdb",
            "preLaunchTask": "task-dosbox-debug",
            "stopAtConnect": true,
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node-terminal",
            "name": "DOS run target",
            "request": "launch",
            "command": "cmake -B /build --build /build && ${userHome}/.dos/dosbox-x/dosbox-x -conf ${userHome}/.dos/dosbox-x.conf -fastlaunch -showcycles -exit ${command:cmake.getLaunchTargetPath}.exe && exit",
            "windows": {
                "name": "DOS run target",
                "type": "node-terminal",
                "request": "launch",
                "command": "python3 ./ImageConverter.py raw -a; .vscode/run-windows.bat ${userHome} ${command:cmake.getLaunchTargetPath};",
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}